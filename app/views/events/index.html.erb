
<h1 class="text-primary font-weight-bold text-center" style="padding-top: 20px;">Les parties Ã  rejoindre</h1>
<div class="container">
  <div class="row">
    <% @events.each do |event| %>
    <div class="col-md-4 col-lg-3 my-3">
      <div class="card-trip">
        <%= link_to event_path(event) do %>
        <%= cl_image_tag event.game.photo %>
        <div class="card-trip-infos">
          <div>
            <h2><%= event.game.name %></h2>
            <p><%= event.details %></p>
            <% i = 0 %>
            <% event.user_events.each do |invit| %>
              <% i += 16 %>
              <%= cl_image_tag invit.user.photo, class:"card-trip-invit avatar-bordered", style:"left: #{i}px" %>
          <%end %>
          <p class="font-weight-bold text-right"> <%= event.place %> </p>
          </div>
           <h2 class="card-trip-pricing"><%= event.date.strftime("on %d %m %Y at %I:%M%p") %></h2>


          <h3 class="card-trip-pricing border border-primary rounded p-1 mx-1"><%= event.date.time.to_formatted_s(:short) %></h3>
          <%= cl_image_tag event.user.photo, class:"card-trip-user avatar-bordered" %>
        </div>
        <% end %>
      </div>
    </div>
    <%end%>
  </div>
</div>
