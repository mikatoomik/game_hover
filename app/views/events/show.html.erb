<h1>Show page</h1>
<div class="container">
  <div class="row ">
    <div class="col-lg-4">
      <div class="card-trip">
        <%= cl_image_tag @event.game.photo %>
        <div class="card-trip-infos" style="height:300px;">
          <div class="info-show d-flex flex-column justify-content-between ">
            <h2><%= @event.game.name %></h2>
            <p>Rules: <%= @event.game.rules %></p>
            <h5>Player max: <%=@event.game.player_max %></h5>

          </div>

        </div>

      </div>
    </div>

    <div class="col-lg-8">
      <div
        id="map"
        style="width: 100%;
        height: 500px; margin-bottom: 20px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">

      </div>
    </div>
  </div>
  <div class="row">
    <div class="card-trip col-lg-12">
        <div class="card-trip-infos">

          <%= cl_image_tag @event.user.photo, class:"card-trip-user-show avatar-bordered" %>
          <% i = 0 %>
            <% @event.user_events.each do |invit| %>
              <% i += 16 %>
              <%= cl_image_tag invit.user.photo, class:"card-trip-user-show avatar-bordered", style:"left: #{i}px" %>
          <%end %>

        </div>
        <div class="d-flex justify-content-between p-2">
<div>
            <h2><%= @event.place %></h2>
            <p><%= @event.details %></p>
            </div>


      <h2 class="card-trip-pricing border border-primary rounded p-1 mx-1"><%= @event.date.time.to_formatted_s(:short) %></h2>
      <div>
              <button class="btn btn-outline-primary"> <%= link_to "S'inscrire", add_player_event_path, method: :post %></button>
      <button class="btn btn-outline-danger"><%= link_to "Decline", decline_event_path, method: :delete %></button>
            </div>
      </div>
      </div>
    </div>

</div>
  </div>





